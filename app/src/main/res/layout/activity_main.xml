<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.co.dwango.cbb.fc.test.MainActivity">

    <Button
        android:id="@+id/send_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正常系: MyClassJS.foo を実行"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/send_request_error1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="異常系: 未登録のオブジェクト"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/send_request_error2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="異常系: 存在しないメソッド"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/destroy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="破棄"
        android:textAllCaps="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
